@model IEnumerable<MVC_SQLite_test2.Models.VærData>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!-- Kaller Create fra VærDataController -->
    <a asp-action="Create">Create New</a>
</p>

<!-- Hentet fra det som ble opprettet fra tidligere prosjekt med bruk av scaffolding -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperatur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kommentar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bruker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temperatur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kommentar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bruker)
                </td>
                <td>
                    <!-- Ikke implementert enda
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    -->
                </td>
            </tr>
        }
    </tbody>
</table>
